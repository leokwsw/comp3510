<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Bar with Return Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#3F51B5"
            android:gravity="center_vertical">

            <!-- Return Button -->
            <ImageButton
                android:id="@+id/btnReturn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_menu_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Return"
                android:tint="#FFFFFF" />

            <!-- Title Text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Product Details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_gallery"
            android:background="#CCCCCC" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bag"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$550"
                android:textSize="18sp"
                android:textColor="#E91E63"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/productLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York, NY"
                android:textColor="#757575"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="A beautiful bag."
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Reviews Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <!-- Reviews Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buyer Reviews"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Existing Reviews (If any) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Sample Review -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Great product! Highly recommended."
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <!-- Another Sample Review -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jane Smith"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Good quality but could be cheaper."
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>

            </LinearLayout>

            <!-- Add Review Section -->
            <EditText
                android:id="@+id/editReview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Write a review..."
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Contact Seller Button -->
        <Button
            android:id="@+id/btnContactSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Seller"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_margin="16dp" />

    </LinearLayout>
</ScrollView>
